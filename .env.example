# Server Configuration
PORT=3030
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/webagent

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# API Configuration
API_PREFIX=api/v1
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60

# General
