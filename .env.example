# Daemon Settings
DAEMON_PORT=3031
DAEMON_ENABLED=true

# Python Settings
PYTHON_PATH=/usr/local/bin/python3
# Add your OpenAI API key here (never commit the actual key)
OPENAI_API_KEY=your-api-key-here 